{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "allowedActions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "^[a-zA-Z0-9-_]+/[a-zA-Z0-9-_]+@[a-zA-Z0-9.-_]+$"
                    },
                    "added": {
                        "type": "string",
                        "format": "date"
                    },
                    "approvedBy": {
                        "type": "string"
                    },
                    "securityReview": {
                        "type": "string",
                        "enum": ["pending", "completed", "not-required"]
                    }
                },
                "required": ["name", "added", "approvedBy", "securityReview"]
            }
        }
    },
    "required": ["allowedActions"]
}
