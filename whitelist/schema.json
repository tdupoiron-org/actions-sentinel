{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "allowedActions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "^[a-zA-Z0-9-_]+/[a-zA-Z0-9-_]+@[a-zA-Z0-9.-_]+$"
                    }
                },
                "required": ["name"]
            }
        }
    },
    "required": ["allowedActions"]
}
